{
    "name": "browser-nav",
    "displayName": "browser-nav",
    "version": "0.0.2",
    "private": true,
    "description": "browser-nav",
    "scripts": {
        "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
        "dev-firefox": "npm run clear && cross-env NODE_ENV=development EXTENSION=firefox run-p dev:*",
        "dev:prepare": "esno scripts/prepare.ts",
        "dev:background": "npm run build:background -- --mode development",
        "dev:web": "vite",
        "dev:js": "npm run build:js -- --mode development",
        "build-firefox": "cross-env NODE_ENV=production EXTENSION=firefox run-s clear build:web build:prepare build:background build:js",
        "build-chrome": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:js",
        "build:prepare": "esno scripts/prepare.ts",
        "build:background": "vite build --config vite.config.background.mts",
        "build:web": "vite build",
        "build:js": "vite build --config vite.config.content.mts",
        "pack": "cross-env NODE_ENV=production run-p pack:*",
        "pack:zip": "rm -f extension.zip && web-ext build -s extension -a . -n extension.zip --overwrite-dest",
        "pack:crx": "crx pack extension -o ./extension.crx",
        "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
        "start:chromium-profile": "web-ext run --source-dir ./extension --target=chromium --url https://en.wikipedia.org/wiki/Main_Page --chromium-profile /home/ian/.config/chromium",
        "start:chromium-blank": "web-ext run --source-dir ./extension --target=chromium --url https://en.wikipedia.org/wiki/Main_Page",
        "start:firefox-profile": "web-ext run --source-dir ./extension --target=firefox-desktop --firefox-binary firefox-developer-edition --url https://en.wikipedia.org/wiki/Main_Page --devtools --firefox-profile /home/ian/.mozilla/firefox/ng992wxh.dev-edition-default",
        "start:firefox-blank": "web-ext run --source-dir ./extension --target=firefox-desktop --firefox-binary firefox-developer-edition --url https://en.wikipedia.org/wiki/Main_Page --devtools",
        "clear": "rm -rf extension/dist extension/manifest.json",
        "test": "vitest test",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^22.5.0",
        "@types/webextension-polyfill": "^0.12.0",
        "@typescript-eslint/eslint-plugin": "^8.2.0",
        "@vitejs/plugin-vue": "^5.1.2",
        "@vue/compiler-sfc": "^3.4.38",
        "@vue/test-utils": "^2.4.6",
        "@vueuse/core": "^11.0.1",
        "chokidar": "^3.6.0",
        "cross-env": "^7.0.3",
        "crx": "^5.0.1",
        "eslint": "^9.9.0",
        "esno": "^4.7.0",
        "fs-extra": "^11.2.0",
        "jsdom": "^24.1.1",
        "lint-staged": "^15.2.9",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.5.4",
        "unplugin-auto-import": "^19.1.1",
        "vite": "^5.4.2",
        "vue": "^3.4.38",
        "web-ext": "^8.2.0",
        "webext-bridge": "^6.0.1",
        "webextension-polyfill": "^0.12.0"
    }
}